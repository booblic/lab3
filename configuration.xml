<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <File name="file" fileName="log.log">
      <PatternLayout>
        <Pattern>%p %c %m %d</Pattern>
      </PatternLayout>
    </File>
	<Console name="console" class="lab3.logger.append.ConsolAppender">
		<PatternLayout>
        <Pattern>%p %c %m %d</Pattern>
      </PatternLayout>
	</Console>
  </Appenders>
  <Loggers>
    <Root>
      <AppenderRef ref="file" level="WARN"/>
    </Root>
    <Logger name="lab3.logger.main.Main">
        <AppenderRef ref="file" level="DEBUG"/>
		<AppenderRef ref="console" level="INFO"/>
    </Logger>
  </Loggers>
</Configuration> 